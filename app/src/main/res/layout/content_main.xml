<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <Button
            android:text="Child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_child" android:textSize="18sp"
            android:textAlignment="center" android:typeface="sans" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp" app:layout_constraintEnd_toStartOf="@+id/btn_Parent"
            android:layout_marginEnd="89dp" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_welcome" android:layout_marginBottom="342dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Parent"
            style="@style/Widget.AppCompat.Button" android:textSize="18sp" android:typeface="sans"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
            android:layout_marginBottom="342dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Secure Child Locator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_welcome" android:textSize="24sp"
            android:typeface="serif" android:textAlignment="center" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>